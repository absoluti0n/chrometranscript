{
  "manifest_version": 3,
  "name": "Chrome DG Test",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js", "type": "module"
  },
  "content_scripts": [
    {
      "js": ["content.js", "./module/tesseract.min.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
	  "extension_pages": "default-src 'self' 'wasm-unsafe-eval'; script-src 'self' 'wasm-unsafe-eval'; object-src 'self' 'wasm-unsafe-eval'; img-src 'self' 'wasm-unsafe-eval'; worker-src 'self' 'wasm-unsafe-eval'"
  }
}